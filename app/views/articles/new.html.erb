<h1>New article</h1>

<%= form_for :article, url: articles_path do |f| %>
    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title, class: "form-control", style: "width: 300px;" %>
    </p>
    <p>
      <%= f.label :text %><br/>
      <%= f.text_area :text, class: "form-control", style: "width: 500px; height: 100px" %>
    </p>
    <p>
      <%= f.submit class: "btn btn-primary" %>
    </p>
<% end %>