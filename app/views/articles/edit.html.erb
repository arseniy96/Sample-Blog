<div class="row">
  <h1>Edit article</h1>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= form_for :article, url: article_path(@article), method: :put do |f| %>
        <p>
          <%= f.label :title %><br/>
          <%= f.text_field :title, class: "form-control", style: "width: 40%;" %>
        </p>
        <p>
          <%= f.label :text %><br/>
          <%= f.text_area :text, class: "form-control", style: "width: 50%; height: 100px" %>
        </p>
        <p>
          <%= f.submit class: "btn btn-primary" %>
        </p>
    <% end %>
  </div>
</div>