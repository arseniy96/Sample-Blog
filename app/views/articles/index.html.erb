<% @articles.each do |article| %>
    <h2><%= article.title %></h2>
    <p><%= article.text %></p>
    <p><%= link_to 'Commetns', article_path(article) %></p>
    <p><%= link_to 'Edit', edit_article_path(article) %></p>
    <p><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'} %></p>
    <hr>
<% end %>