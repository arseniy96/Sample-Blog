<div class="row">
  <div class="col-xs-12">
    <h1><%= t('contacts.new_contacts') %></h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= form_for :contact, url: contacts_path do |f| %>
        <% if @contact && @contact.errors.any? %>
            <ul>
              <% @contact.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
        <% end %>
        <p>
          <%= f.label :email %><br/>
          <%= f.text_field :email, class: "form-control", style: "width: 35%;" %>
        </p>
        <p>
          <%= f.label :message %><br/>
          <%= f.text_area :message, class: "form-control", style: "width: 40%; height: 100px;" %>
        </p>
        <p>
          <%= f.submit 'Send Message', class: "btn btn-primary" %>
        </p>
    <% end %>
  </div>
</div>